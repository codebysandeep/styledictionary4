{
  "source": ["tokens/**/*.@(json|json5)"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "build/css/",
      "files": [
        {
          "destination": "_base.css",
          "format": "css/variables",
          "filter": {
            "$type": "base"
          }
        },
        {
          "destination": "_color.css",
          "format": "css/variables",
          "filter": {
            "$type": "color"
          }
        },
        {
          "destination": "_dimension.css",
          "format": "css/variables",
          "filter": {
            "$type": "dimension"
          }
        },
        {
          "destination": "_typography.css",
          "format": "css/variables",
          "filter": {
            "$type": "typography"
          }
        },
        {
          "destination": "_transition.css",
          "format": "css/variables",
          "filter": {
            "$type": "transition"
          }
        },
        {
          "destination": "_border.css",
          "format": "css/variables",
          "filter": {
            "$type": "border"
          }
        },
        {
          "destination": "_shadow.css",
          "format": "css/variables",
          "filter": {
            "$type": "shadow"
          }
        },
        {
          "destination": "_fontFamily.css",
          "format": "css/variables",
          "filter": {
            "$type": "fontFamily"
          }
        },
        {
          "destination": "_fontSize.css",
          "format": "css/variables",
          "filter": {
            "$type": "fontSize"
          }
        },
        {
          "destination": "_fontWeight.css",
          "format": "css/variables",
          "filter": {
            "$type": "fontWeight"
          }
        },
        {
          "destination": "_number.css",
          "format": "css/variables",
          "filter": {
            "$type": "number"
          }
        }
      ]
    }
  }
}
